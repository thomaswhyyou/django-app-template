{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "appcode",
      "host": {
        "sourcePath": "/var/app/current/app/"
      }
    },
    {
      "name": "empty",
      "host": {}
    }
  ],
  "containerDefinitions": [
    { "name": "db",
      "image": "postgres",
      "essential": true,
      "memory": 128
    },
    {
      "name": "appsvr",
      "image": "thomaswhyyou/django-app-template-app",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "appcode",
          "containerPath": "/src/app/"
        },
        {
          "sourceVolume": "empty",
          "containerPath": "/opt/app/"
        }
      ],
      "links": [
        "db"
      ]
    },
    {
      "name": "nginx",
      "image": "thomaswhyyou/django-app-template-nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "appcode",
          "containerPath": "/src/app/"
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "appsvr"
        }
      ],
      "links": [
        "appsvr"
      ]
    }
  ]
}
